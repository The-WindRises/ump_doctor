                            android:textSize="@dimen/font_12"
                            android:visibility="gone" />

                        <TextView
                            android:id="@+id/doctorstitle_numbertitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dp"
