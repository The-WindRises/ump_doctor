                            android:textSize="@dimen/font_12"
                            android:visibility="invisible" />

                        <TextView
                            android:id="@+id/qualification1title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dp"
                            android:layout_toRightOf="@+id/xinhao12"
                            android:text="@string/qualification_numbertitle"
                            android:textColor="@color/textColor1"
                            android:textSize="15sp"
                            android:visibility="visible" />

                        <EditText
                            android:id="@+id/qualification1_number"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="20dp"
                            android:layout_toRightOf="@+id/qualification1title"
                            android:background="@null"
                            android:hint="@string/input_certificateProfessional_title"
                            android:inputType="number"
                            android:textColor="@color/textColor1"
                            android:textSize="15sp" />
                    </RelativeLayout>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:layout_marginTop="20dp"
                    android:background="@color/lineColor1" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/xinhao9"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
