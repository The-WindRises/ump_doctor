<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/len_72"
        android:layout_marginTop="@dimen/len_32"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_user_header"
            android:layout_width="@dimen/len_72"
            android:layout_height="@dimen/len_72"
            android:layout_marginLeft="@dimen/len_16"
            android:src="@mipmap/icon_man2" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/len_12"
                android:text=""
                android:textColor="@color/white"
                android:textSize="@dimen/font_28" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/len_12"
                android:text="@string/waiting_invitation"
                android:textColor="@color/white"
                android:textSize="@dimen/font_18" />
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:layout_width="@dimen/len_72"
        android:layout_height="@dimen/len_72"
        android:layout_marginLeft="@dimen/len_16"
        android:layout_marginTop="@dimen/len_52"
        android:src="@mipmap/icon_man1" />


    <TextView
        android:id="@+id/tv_time_start"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/len_100"
        android:gravity="center"
        android:text="医生将在59s后接受问诊......"
        android:textColor="@color/white"
        android:textSize="@dimen/font_16" />


    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <ImageView
        android:id="@+id/btn_cancel_video_chat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:src="@mipmap/em_call_hangup" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/len_8"
        android:layout_marginBottom="@dimen/len_12"
        android:text="@string/cancel"
        android:textColor="@color/white"
        android:textSize="@dimen/font_18" />


</LinearLayout>