<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    tools:context=".ui.activity.login.BindPhoneActivity">

    <include layout="@layout/common_top1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/len_28"
        android:layout_marginTop="@dimen/len_32"
        android:layout_marginRight="@dimen/len_28"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="@dimen/len_14"
            android:layout_height="@dimen/len_14"
            android:layout_gravity="center_vertical"
            android:src="@mipmap/icon_phone" />

        <EditText
            android:id="@+id/et_phone"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/len_10"
            android:layout_marginRight="@dimen/len_28"
            android:layout_weight="1"
            android:background="@null"
            android:cursorVisible="true"
            android:hint="@string/input_phone_number"
            android:inputType="number"
            android:textColorHint="@color/hintColor1"
            android:textCursorDrawable="@null"
            android:textSize="@dimen/font_14" />

        <LinearLayout
            android:id="@+id/ll_phone_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_phone_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="+86"
                android:textColor="@color/hintColor1"
                android:textSize="@dimen/font_14" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/len_10"
                android:src="@mipmap/icon_right" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="@dimen/len_28"
        android:layout_marginTop="@dimen/len_10"
        android:layout_marginRight="@dimen/len_28"
        android:background="@color/lineColor1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/len_28"
        android:layout_marginTop="@dimen/len_28"
        android:layout_marginRight="@dimen/len_28"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="@dimen/len_14"
            android:layout_height="@dimen/len_14"
            android:layout_gravity="center_vertical"
            android:src="@mipmap/icon_psd" />

        <EditText
            android:id="@+id/et_verification_code"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/len_10"
            android:layout_marginRight="@dimen/len_28"
            android:layout_weight="1"
            android:background="@null"
            android:hint="请输入验证码"
            android:inputType="number"
            android:textColorHint="@color/hintColor1"
            android:textCursorDrawable="@null"
            android:textSize="@dimen/font_14" />

        <TextView
            android:id="@+id/tv_get_verification_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="获取验证码"
            android:textColor="@color/textColor2"
            android:textSize="@dimen/font_14" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="@dimen/len_28"
        android:layout_marginTop="@dimen/len_10"
        android:layout_marginRight="@dimen/len_28"
        android:background="@color/lineColor1" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/len_28"
        android:layout_marginTop="@dimen/len_14"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="验证码已发送至"
            android:textColor="@color/textColor1"
            android:textSize="@dimen/font_12" />

        <TextView
            android:id="@+id/tv_phone_send"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="173****7588"
            android:textColor="@color/textColor2"
            android:textSize="@dimen/font_12" />
    </LinearLayout>

    <Button
        android:id="@+id/btn_bind"
        android:layout_width="match_parent"
        android:layout_height="@dimen/len_48"
        android:layout_marginLeft="@dimen/len_28"
        android:layout_marginTop="@dimen/len_116"
        android:layout_marginRight="@dimen/len_28"
        android:background="@drawable/btn_login"
        android:text="确认绑定"
        android:textColor="@color/white"
        android:textSize="@dimen/font_18" />
</LinearLayout>