<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <solid android:color="@color/textColor13" />
    //设置该控件的背景颜色
    //设置边距
    <padding
        android:bottom="10dp"
        android:left="10dp"
        android:right="10dp"
        android:top="10dp" />
    //控制边界线颜色和笔触大小
    <stroke
        android:width="1dp"
        android:color="@color/textColor5" />
    //控制圆角大小
    <corners android:radius="5dp" />
</shape>